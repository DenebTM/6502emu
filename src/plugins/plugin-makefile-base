CXX = g++
CXXFLAGS = -g -O3 -Wall -Wpedantic -std=c++20 -fPIC -fvisibility=hidden -MMD

INCLUDE += -I../../include

OBJDIR = obj
OBJS = $(addprefix $(OBJDIR)/, $(SOURCES:%.cpp=%.o))

$(OUTFILE): $(OBJS)
	$(CXX) -shared -o $@ $^ $(LDLIBS)

-include $(OBJS:%.o=%.d)

$(OBJDIR)/%.o: %.cpp
	@mkdir -p $(dir $@)
	$(CXX) $(INCLUDE) $(CXXFLAGS) -c $< -o $@

clean:
	$(RM) -r $(OUTFILE) $(OBJDIR)
